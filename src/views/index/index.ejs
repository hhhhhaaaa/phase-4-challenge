<!DOCTYPE html>
<html>

<head>
  <title>Vinyl</title>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script type="text/javascript" src="/script.js"></script>
</head>

<body>
  <% include ../partials/header.ejs %>
  <div class="document-body">
    <img class="vinyl-image" src="images/vinyl-record.jpg" alt="Vinyl">
    <h2>Records</h2>
    <div class="album-list">
      <% albums.forEach(function(album) { %>
        <div>
          <h5><a href="/albums/<%= album.id %>"><%= album.title %></a></h5>
          <span><%= album.artist %></span>
        </div>
        <% }) %>
    </div>
    <div class="review-list">
      <% reviews.forEach(function(review) { %>
        <div>
          <b><%= review.title %></b>
          <p>
            <%= review.date_created %>
          </p>
          <p>
            <%= review.body %>
          </p>
          <p>By
            <%= review.account_name%>
          </p>
          <% if (userSessionID) { %>
            <% if (review.account_id === userSessionID) { %>
              <button><img class="delete-button" src="/images/trash-icon.jpg" alt="Delete"><button>
              <% } %>
                <% } %>
        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>
